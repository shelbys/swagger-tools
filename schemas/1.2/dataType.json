{
    "id": "http://wordnik.github.io/schemas/v1.2/dataType.json#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Data type as described by the specification (version 1.2)",
    "type": "object",
    "oneOf": [
        { "$ref": "#/definitions/refType" },
        { "$ref": "#/definitions/voidType" },
        { "$ref": "#/definitions/primitiveType" },
        { "$ref": "#/definitions/modelType" },
        { "$ref": "#/definitions/arrayType" }
    ],
    "definitions": {
        "refType": {
            "required": [ "$ref" ],
            "properties": {
                "$ref": { "type": "string" }
            },
            "additionalProperties": false
        },
        "voidType": {
            "enum": [ { "type": "void" } ]
        },
        "modelType": {
            "required": [ "type" ],
            "properties": {
                "type": {
                    "type": "string",
                    "not": {
                        "enum": [ "boolean", "integer", "number", "string", "array" ]
                    }
                }
            },
            "additionalProperties": false
        },
        "primitiveType": {
            "required": [ "type" ],
            "properties": {
                "type": {
                    "enum": [ "boolean", "integer", "number", "string" ]
                },
                "format": { "type": "string" },
                "pattern": { "type": "string" },
                "defaultValue": {
                    "not": { "type": [ "array", "object", "null" ] }
                },
                "enum": {
                    "type": "array",
                    "items": { "type": "string" },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "minimum": {
                    "oneOf": [
                        { "type": "number" },
                        { "type": "string" }
                    ]
                },
                "maximum": {
                    "oneOf": [
                        { "type": "number" },
                        { "type": "string" }
                    ]
                }
            },
            "additionalProperties": false,
            "dependencies": {
                "format": {
                    "oneOf": [
                        {
                            "properties": {
                                "type": { "enum": [ "integer" ] },
                                "format": {
                                    "enum": [
                                        "currency-micro-unit",
                                        "currency-micro-unit-positive",
                                        "currency-positive",
                                        "int32",
                                        "int64",
                                        "integer-positive"
                                    ]
                                },
                                "pattern": { "type": "string" }
                            }
                        },
                        {
                            "properties": {
                                "type": { "enum": [ "number" ] },
                                "format": { "enum": [ "float", "double" ] },
                                "pattern": { "type": "string" }
                            }
                        },
                        {
                            "properties": {
                                "type": { "enum": [ "string" ] },
                                "format": {
                                    "enum": [
                                        "bcp-47",
                                        "byte",
                                        "city-name",
                                        "city-name-unicode",
                                        "constant",
                                        "country-code",
                                        "date",
                                        "date-time",
                                        "domain",
                                        "email",
                                        "guid",
                                        "host-name",
                                        "host-name-or-ip-address",
                                        "ip-address",
                                        "ipv4",
                                        "ipv6",
                                        "iso-date",
                                        "iso-date-future",
                                        "iso-datetime",
                                        "iso-country-code",
                                        "iso-currency-code",
                                        "iso-timestamp",
                                        "json-path",
                                        "organization-name",
                                        "person-name",
                                        "phone",
                                        "postal-code",
                                        "shopper-password",
                                        "state-province-territory",
                                        "state-province-territory-unicode",
                                        "street-address",
                                        "street-address-unicode",
                                        "street-address2",
                                        "street-address2-unicode",
                                        "tld",
                                        "uri",
                                        "url"
                                    ]
                                },
                                "pattern": { "type": "string" }
                            }
                        }
                    ]
                },
                "enum": {
                    "properties": {
                        "type": { "enum": [ "string" ] }
                    }
                },
                "minimum": {
                    "properties": {
                        "type": { "enum": [ "integer", "number" ] }
                    }
                },
                "maximum": {
                    "properties": {
                        "type": { "enum": [ "integer", "number" ] }
                    }
                }
            }
        },
        "arrayType": {
            "required": [ "type", "items" ],
            "properties": {
                "type": { "enum": [ "array" ] },
                "items": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/itemsObject" }
                },
                "uniqueItems": { "type": "boolean" }
            },
            "additionalProperties": false
        },
        "itemsObject": {
            "oneOf": [
                {
                    "$ref": "#/definitions/refType"
                },
                {
                    "allOf": [
                        {
                            "$ref": "#/definitions/primitiveType"
                        },
                        {
                            "properties": {
                                "type": {},
                                "enum": { "type": "array", "items": { "type": "string" } },
                                "format": {},
                                "pattern": {}
                            },
                            "additionalProperties": false
                        }
                    ]
                }
            ]
        }
    }
}