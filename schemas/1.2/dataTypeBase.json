{
    "id": "http://wordnik.github.io/schemas/v1.2/dataTypeBase.json#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Data type fields (section 4.3.3)",
    "type": "object",
    "oneOf": [
        { "required": [ "type" ] },
        { "required": [ "$ref" ] }
    ],
    "properties": {
        "type": { "type": "string" },
        "$ref": { "type": "string" },
        "format": { "type": "string" },
        "pattern": { "type": "string" },
        "defaultValue": {
            "not": { "type": [ "array", "object", "null" ] }
        },
        "enum": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true,
            "minItems": 1
        },
        "minimum": {
            "oneOf": [
                { "type": "number" },
                { "type": "string" }
            ]
        },
        "maximum": {
            "oneOf": [
                { "type": "number" },
                { "type": "string" }
            ]
        },
        "items": { "$ref": "#/definitions/itemsObject" },
        "uniqueItems": { "type": "boolean" }
    },
    "dependencies": {
        "format": {
            "oneOf": [
                {
                    "properties": {
                        "type": { "enum": [ "integer" ] },
                        "format": {
                            "enum": [
                                "currency-micro-unit",
                                "currency-micro-unit-positive",
                                "currency-positive",
                                "int32",
                                "int64",
                                "integer-positive"
                            ]
                        },
                        "pattern": { "type": "string" }
                    }
                },
                {
                    "properties": {
                        "type": { "enum": [ "number" ] },
                        "format": { "enum": [ "float", "double" ] },
                        "pattern": { "type": "string" }
                    }
                },
                {
                    "properties": {
                        "type": { "enum": [ "string" ] },
                        "format": {
                            "enum": [
                                "bcp-47",
                                "byte",
                                "city-name",
                                "city-name-unicode",
                                "constant",
                                "country-code",
                                "date",
                                "date-time",
                                "domain",
                                "email",
                                "guid",
                                "host-name",
                                "host-name-or-ip-address",
                                "ip-address",
                                "ipv4",
                                "ipv6",
                                "iso-date",
                                "iso-date-future",
                                "iso-datetime",
                                "iso-country-code",
                                "iso-currency-code",
                                "iso-timestamp",
                                "json-path",
                                "organization-name",
                                "person-name",
                                "phone",
                                "postal-code",
                                "shopper-password",
                                "state-province-territory",
                                "state-province-territory-unicode",
                                "street-address",
                                "street-address-unicode",
                                "street-address2",
                                "street-address2-unicode",
                                "tld",
                                "uri",
                                "url"
                            ]
                        },
                        "pattern": { "type": "string" }
                    }
                }
            ]
        }
    },
    "definitions": {
        "itemsObject": {
            "oneOf": [
                {
                    "type": "object",
                    "required": [ "$ref" ],
                    "properties": {
                        "$ref": { "type": "string" }
                    },
                    "additionalProperties": false
                },
                {
                    "allOf": [
                        { "$ref": "#" },
                        {
                            "required": [ "type" ],
                            "properties": {
                                "type": {},
                                "enum": { "type": "array", "items": { "type": "string" } },
                                "format": {},
                                "pattern": {}
                            },
                            "additionalProperties": false
                        }
                    ]
                }
            ]
        }
    }
}
